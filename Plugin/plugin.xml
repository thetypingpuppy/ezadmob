<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    id="com.orbost.ezadmob"
    version="1.0.0">

  <name>ezadmob</name>

  <description>
    Cordova plugin for admob implementation.
  </description>

  <!-- <asset src="www/ezadmob.js" target="plugins/ezadmob.js" /> -->

  <engines>
      <engine name="cordova" version=">=3.0.0" />
  </engines>

  
  <!-- android -->
  <platform name="android">

    <dependency id="cordova-plugin-androidx" version="2.0.0"/>
    
    <framework src="com.google.android.gms:play-services-ads:19.3.0"/>

    <config-file parent="/manifest/application" target="AndroidManifest.xml">
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID" android:value="ca-app-pub-7578900025157829~6118086218"/>
    </config-file>

    <config-file target="res/xml/config.xml" parent="/*">
        <feature name="Banner">
            <param name="android-package" value="com.orbost.ezadmob.Banner"/>
        </feature>
    </config-file>

    <source-file src="src/android/com/orbost/ezadmob/Banner.java" target-dir="src/com/orbost/ezadmob" />
    <source-file src="src/android/com/orbost/ezadmob/BannerListener.java" target-dir="src/com/orbost/ezadmob" />
    
  </platform>

  <!-- more platforms here -->

</plugin>